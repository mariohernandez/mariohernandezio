{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["**/src/js/**/*.js", "**/src/css/**/*.css", "!**/dist/**/*"],
    "ignoreUnknown": false
  },
  "linter": {
    "enabled": true,
    "includes": ["**", "!**/dist"],
    "rules": {
      "recommended": false
    }
  },
  "formatter": {
    "enabled": false,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
